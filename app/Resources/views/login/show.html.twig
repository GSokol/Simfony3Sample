{% extends 'base.html.twig' %}

{% block container_body %}
  <div class="box fullscreen">
    <div class="boxHeader"><p>Вход</p></div>
    <div class="containerText">
      {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      
      <form action="{{ path('login_check') }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        <div>
        <label for="username">Имя пользователя:</label>
        <input type="text" class="form-control" style="display:inline-block;float:right;" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div style="margin-top:5px;margin-bottom:5px;">
        <label for="password">Пароль:</label>
        <input type="password" class="form-control" style="display:inline-block;float:right;" id="password" name="_password" />
        </div>

        <div style="margin-top:5px;padding-top:35px;">
        <button type="submit" class="btn btn-default">вход</button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
